<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Whole_Quantity_Only</fullName>
    <active>true</active>
    <errorConditionFormula>OR( 
MCEILING(Quantity) &lt;&gt; Quantity, 
Quantity&lt;=0 
)</errorConditionFormula>
    <errorMessage>Quantity must be a positive value and a whole number.</errorMessage>
</ValidationRule>
