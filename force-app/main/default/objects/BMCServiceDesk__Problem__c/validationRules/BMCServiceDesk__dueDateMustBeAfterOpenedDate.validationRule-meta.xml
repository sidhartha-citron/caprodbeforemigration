<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BMCServiceDesk__dueDateMustBeAfterOpenedDate</fullName>
    <active>true</active>
    <description>Due date must come after Opened Date.</description>
    <errorConditionFormula>AND(NOT(OR(ISNULL(BMCServiceDesk__Due_Date_Time__c),ISBLANK(	BMCServiceDesk__Due_Date_Time__c) ) ),NOT(ISCHANGED( BMCServiceDesk__Open_Date_Time__c ) ), BMCServiceDesk__Due_Date_Time__c &lt; BMCServiceDesk__Open_Date_Time__c)</errorConditionFormula>
    <errorMessage>The Due Date must be later than the Opened Date</errorMessage>
</ValidationRule>
