<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Staff_required_rule</fullName>
    <active>true</active>
    <description>This rule requires the staff field when status &lt;&gt; OPENED.</description>
    <errorConditionFormula>AND(
    BMCServiceDesk__Status__c  &lt;&gt; &quot;OPENED&quot;,
    ISBLANK( BMCServiceDesk__FKStaff__c ) 
)</errorConditionFormula>
    <errorMessage>Please assign a staff member.</errorMessage>
</ValidationRule>
