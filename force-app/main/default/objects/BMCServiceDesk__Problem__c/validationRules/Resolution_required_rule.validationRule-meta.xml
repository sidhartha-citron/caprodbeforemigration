<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Resolution_required_rule</fullName>
    <active>true</active>
    <description>This rule requires Resolution field when state = closed.</description>
    <errorConditionFormula>AND(
    BMCServiceDesk__State__c  = False,
    ISBLANK( BMCServiceDesk__Problem_Resolution__c ) 
)</errorConditionFormula>
    <errorMessage>Please enter a Resolution.</errorMessage>
</ValidationRule>
