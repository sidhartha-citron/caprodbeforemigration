<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BMCServiceDesk__Review_date_must_be_a_future_date</fullName>
    <active>true</active>
    <description>Review date must be a future date.</description>
    <errorConditionFormula>AND
(
     BMCServiceDesk__Review_Date__c  &lt;   NOW(), 
     Not(ISCHANGED( BMCServiceDesk__View_Count__c ))   
)</errorConditionFormula>
    <errorDisplayField>BMCServiceDesk__Review_Date__c</errorDisplayField>
    <errorMessage>Review date must be a future date.</errorMessage>
</ValidationRule>
