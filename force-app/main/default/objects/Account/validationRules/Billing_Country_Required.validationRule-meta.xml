<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Billing_Country_Required</fullName>
    <active>true</active>
    <description>Billing Country Required</description>
    <errorConditionFormula>(RecordType.Name = &apos;Prospect&apos; ||  RecordType.Name = &apos;Customer Bill To&apos;) &amp;&amp;  ISBLANK(BillingCountry )&amp;&amp; CASESAFEID($User.ProfileId) &lt;&gt; $Setup.Field_Service_Settings__c.Integration_User_Profile__c</errorConditionFormula>
    <errorDisplayField>BillingCountry</errorDisplayField>
    <errorMessage>Billing Country Is Required when creating this Account.</errorMessage>
</ValidationRule>
