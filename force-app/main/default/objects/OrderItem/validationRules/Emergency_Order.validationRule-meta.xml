<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Emergency_Order</fullName>
    <active>true</active>
    <errorConditionFormula>AND( Order.Emergency__c, TEXT(Frequency__c) !=&apos;One-Time&apos;,  Active__c == TRUE)</errorConditionFormula>
    <errorMessage>Emergency Orders can only have a frequency of One-Time</errorMessage>
</ValidationRule>
