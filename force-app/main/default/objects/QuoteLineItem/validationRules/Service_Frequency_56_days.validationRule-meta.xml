<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Service_Frequency_56_days</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISPICKVAL(Service_Frequency__c,&apos;56 Days&apos;), 
    OR(UPPER(Quote.Opportunity.Account.ShippingState) != &apos;ON&apos;,
       AND(LEN(Quote.Opportunity.Account.ShippingState) &gt; 2,
           UPPER(Quote.Opportunity.Account.ShippingState) != &apos;ONTARIO&apos;)),
    Quote.Opportunity.Account.Service_Territory__r.Include_In_Integration__c = True
   )</errorConditionFormula>
    <errorDisplayField>Service_Frequency__c</errorDisplayField>
    <errorMessage>The product frequency is not sold in this customer region (confirm with business)</errorMessage>
</ValidationRule>
