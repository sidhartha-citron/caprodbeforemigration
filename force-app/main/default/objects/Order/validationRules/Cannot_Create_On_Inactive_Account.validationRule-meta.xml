<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_Create_On_Inactive_Account</fullName>
    <active>true</active>
    <description>Prevents Orders on Inactive Accounts</description>
    <errorConditionFormula>Account.Inactive__c  = TRUE</errorConditionFormula>
    <errorMessage>Parent Account must be Active.</errorMessage>
</ValidationRule>
