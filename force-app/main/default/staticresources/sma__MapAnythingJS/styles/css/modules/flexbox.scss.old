.flex-horizontal, .flex-row {
	@include flexbox();
	@include flex-direction(row);
	width: 100%;

	.flex-end {
		margin-left: auto;
	}
	
	&.justify-content-center {
		justify-content: center;
	}

	&.align-items-center {
		align-items: center;
	}
}

.flex-vertical, .flex-column {
	@include flexbox();
	@include flex-direction(column);
	height: 100%;

	.flex-end {
		margin-top: auto;
	}

	.overflow-scroll-y {
		overflow-y: auto;
	}
	
	&.justify-content-center {
		justify-content: center;
	}

	&.align-items-center {
		align-items: center;
	}
}

.flex-grow-1 {
	flex-grow: 1;
	position: relative;
}

.flex-basis-0 {
	flex-basis: 0;
}

.flex-shrink-0 {
	flex-shrink: 0;
}
