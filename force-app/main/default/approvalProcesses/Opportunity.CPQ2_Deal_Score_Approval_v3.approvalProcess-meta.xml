<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>CPQ2_STS__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Initial Approval</label>
        <name>Initial_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>slanthier@citronhygiene.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>EN 2021-03-11: Shawn replaces Alison as approver.</description>
        <entryCriteria>
            <formula>if(CPQ2_ASN__c = 3, true, false)</formula>
        </entryCriteria>
        <label>Second Tier Approval</label>
        <name>Second_Tier_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>CPQ/CPQ_Opp_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>CASE(CPQ2_ASN__c, 2, 1, 3, 1, 0) = 1</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CPQ2_Approve_Other_Thresholds</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CPQ2_Stamp_FSA</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CPQ_Email_Submitter_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>CPQ_Stamp_Approved_FSA</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CPQ_Stamp_Deal_Score_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stamp_Ship_To_Score_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CPQ_Email_Submitter_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Deal Score Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
