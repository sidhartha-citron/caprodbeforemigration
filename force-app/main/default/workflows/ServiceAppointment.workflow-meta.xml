    <rules>
        <fullName>Set Trigger Dispatch notification to true</fullName>
        <actions>
            <name>Set_Trigger_Dis_notification_to_true</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND( 
ISPICKVAL( Line_Of_Business__c , &apos;Pest Control&apos;), 
FSL__Emergency__c = true, 
OR( 
AND( 
ISNEW(), 
ISPICKVAL( Status , &apos;Dispatched&apos;) 
), 
AND( 
NOT(ISNEW()), 
ISPICKVAL(Status , &apos;Dispatched&apos;), 
ISCHANGED(Status) 
),	
OR( 
AND( 
ISCHANGED(SchedStartTime), 
NOT(ISBLANK(PRIORVALUE(SchedStartTime))), 
NOT(ISNEW()) 
), 
AND( 
ISCHANGED(SchedEndTime), 
NOT(ISBLANK(PRIORVALUE(SchedEndTime))), 
NOT(ISNEW()) 
) 
) 
) 
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
