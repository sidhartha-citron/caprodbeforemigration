	<script type="text/javascript">
	    function passwordStrength(password) {
	        var desc = new Array();
            desc[0] = "Too Short";
            desc[1] = "Too Short";	
            desc[2] = "Weak";
            desc[3] = "Good";
            desc[4] = "Good";
            desc[5] = "Strong";
	
	        var score = 0;
	        var specials = 0;
	
	        //if password bigger than 0 make the score 1
	        if (password.length > 0) {
	            score=1;
	        }
	
	        //if password bigger than 5 make the score 2
	        if (password.length > 5) {
	            score=2;
	        }
	
	        if (password.length > 7) {
	            //if password has lowercase, add 1 to specials
	            if (password.match(/[a-z]/)) { specials++; }
	            //if password has uppercase, add 1 to specials
	            if (password.match(/[A-Z]/)) { specials++; }
	            //if password has digit, add 1 to specials
	            if (password.match(/\d/)) { specials++; }
	            //if password has special char, add 1 to specials
	            if (password.match(/.[!,@#$%^&*?_~(-)]/)) { specials++; }
	
	            // if there are 3 of the special cases hit, make the score 4
	            if (specials > 2) {
	                score=4;
	            }
	
	            // if all 4 special cases were hit, make the score 5
	            if (specials > 3) {
	                score=5;
	            }
	        }
	
	        document.getElementsByName("passwordDescription")[0].innerHTML = desc[score];
	
	        document.getElementsByName("passwordStrength")[0].className = "strength" + score;
	    }

