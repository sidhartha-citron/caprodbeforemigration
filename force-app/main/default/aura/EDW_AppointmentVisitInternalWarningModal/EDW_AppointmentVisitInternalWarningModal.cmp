<aura:component>
    <section role="dialog" aria-modal="true" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <header class="slds-modal__header">
                <h2 class="slds-text-heading_medium slds-hyphenate">{!$Label.c.Service_Appointment_Discrepancy_Found}</h2>
            </header>
            
            <div class="slds-modal__content slds-modal__content slds-p-around--medium">
                {!$Label.c.Number_of_Resources_Discrepancy}
            </div>
            
            <footer class="slds-modal__footer">
                <lightning:button label="{!$Label.c.I_Acknowledge}" title="{!$Label.c.Cancel_Label}" onclick="{!c.closeModal}" variant="brand" />
            </footer>
        </div>
    </section>
    
    <div class="slds-backdrop slds-backdrop_open"></div>
</aura:component>